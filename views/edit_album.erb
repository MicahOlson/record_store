<h1>Update <%= "#{@album.name()} by #{@album.artist}" %></h1>

<form action="/albums/<%= @album.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <div class="form-group">
    <label for="name">Name</label>
    <input id="name" name="name" type="text" class="form-control" value="<%= @album.name %>">
    <label for="artist">Artist</label>
    <input id="artist" name="artist" type="text" class="form-control" value="<%= @album.artist %>">
    <label for="year">Year</label>
    <input id="year" name="year" type="text" class="form-control" value="<%= @album.year %>">
    <label for="genre">Genre</label>
    <input id="genre" name="genre" type="text" class="form-control" value="<%= @album.genre %>">
  </div>
  <button type="submit">Update</button>
</form>

<p><a href="/albums">Return to album list</a></p>

<form action="/albums/<%= @album.id %>" method="post">
  <input name="_method" type="hidden" value="delete">
  <button type="submit">Delete album</button>
</form>
